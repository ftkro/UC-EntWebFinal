@model IEnumerable<Hobby>

@{
    ViewData["Title"] = "Takuro's Hobby";
    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);  
}

<div class="text-center">
    <h1 class="display-4">Takuro's Hobby</h1>

    @foreach (Category c in ViewBag.Days)
    {
        string btnCss = (id == c.CategoryId) ? "btn btn-dark" : "btn btn-outline-dark";
        <a asp-action="Index" asp-route-id="@c.CategoryId" class="@btnCss mr-1 mb-2">@c.Title</a>
    }
</div>

<table class="table">
    <thead>
        <tr><th>Person</th><th>Category</th><th>Hobby</th><th>Detail</th></tr>
    </thead>
    <tbody>
        @foreach (Hobby h in Model) {
        <tr>
            <td>@h.Person.FullName</td>
            <td>@h.Category.Title</td>
            <td>@h.Title</td>
            <td>@h.Description</td>
        </tr>
        }
    </tbody>
</table>

